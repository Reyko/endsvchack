<div class="edit-profile">
<h1>Edit profile</h1>

<%= form_for :volunteer, url: users_path, :class => "edit-form", :method => :put do |f| %>

  <%= field_set_tag do %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :email %>
    <%= f.text_field :email %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :mobile %>
    <%= f.text_field :mobile %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :skype %>
    <%= f.text_field :skype %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :role %>
    <%= f.text_field :role %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :relevant_exp %>
    <%= f.text_area(:relevant_exp, :cols => 50, :rows => 20, :class => "experience") %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :work_remote %>
    <%= f.text_field :work_remote %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :travel_expenses %>
    <%= f.text_field :travel_expenses %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label "Have you received training in relevant courses?" %>
    <%= f.text_field :training %>
  <% end %>

<%= submit_tag "Update"%> 

<% end %>

</div>